package java_database_project;

import javax.swing.JTabbedPane;
import javax.swing.JLabel;
import javax.swing.JPanel;

import java.awt.Color;

import javax.swing.SwingConstants;
import javax.swing.JTextField;
import javax.swing.JComboBox;
import javax.swing.JTree;
import java.awt.Label;

public class TabbedPanel extends JTabbedPane{
	
	private static final long serialVersionUID = 1L;
	private JTextField troop_name;
	private JTextField troop_city;
	private JTextField textField_2;
	private JTextField textField_3;
	private JTextField troop_address;
	private JTextField troop_zipcode;

	public TabbedPanel (){	
		setSize(800, 800);
		
		JPanel data = new JPanel();
		data.setBackground(Color.LIGHT_GRAY);
		addTab("Data", null, data, null);
		data.setLayout(null);
		
		JPanel new_scout = new JPanel();
		new_scout.setBackground(Color.LIGHT_GRAY);
		new_scout.setForeground(Color.GRAY);
		addTab("New Scout", null, new_scout, null);
		
		JPanel new_troop = new JPanel();
		new_troop.setBackground(Color.LIGHT_GRAY);
		addTab("New Troop", null, new_troop, null);
		new_troop.setLayout(null);
		
		JLabel new_troop_information = new JLabel("New Troop Information");
		new_troop_information.setVerticalAlignment(SwingConstants.TOP);
		new_troop_information.setBounds(10, 11, 336, 20);
		new_troop.add(new_troop_information);
		
		JLabel lblTroopName = new JLabel("Troop Name:");
		lblTroopName.setHorizontalAlignment(SwingConstants.RIGHT);
		lblTroopName.setBounds(10, 119, 84, 25);
		new_troop.add(lblTroopName);
		
		troop_name = new JTextField();
		troop_name.setBounds(104, 119, 624, 25);
		new_troop.add(troop_name);
		troop_name.setColumns(10);
		
		JLabel lblTroopCity = new JLabel("City:");
		lblTroopCity.setHorizontalAlignment(SwingConstants.RIGHT);
		lblTroopCity.setBounds(20, 241, 77, 14);
		new_troop.add(lblTroopCity);
		
		troop_city = new JTextField();
		troop_city.setBounds(104, 236, 242, 25);
		new_troop.add(troop_city);
		troop_city.setColumns(10);
		
		JLabel lblState = new JLabel("State:");
		lblState.setHorizontalAlignment(SwingConstants.RIGHT);
		lblState.setBounds(376, 241, 46, 14);
		new_troop.add(lblState);
		
		String[] states = { "MD","DC" };
		JComboBox troop_state_combo = new JComboBox(states);
		troop_state_combo.setBounds(432, 238, 92, 20);
		troop_state_combo.setSelectedIndex(0);
		new_troop.add(troop_state_combo);
		
		JLabel lblAddress = new JLabel("Address:");
		lblAddress.setHorizontalAlignment(SwingConstants.RIGHT);
		lblAddress.setBounds(33, 182, 61, 16);
		new_troop.add(lblAddress);
		
		troop_address = new JTextField();
		troop_address.setBounds(104, 176, 624, 25);
		new_troop.add(troop_address);
		troop_address.setColumns(10);
		
		JLabel lblZipcode = new JLabel("Zipcode:");
		lblZipcode.setHorizontalAlignment(SwingConstants.RIGHT);
		lblZipcode.setBounds(554, 240, 61, 16);
		new_troop.add(lblZipcode);
		
		troop_zipcode = new JTextField();
		troop_zipcode.setBounds(627, 234, 101, 25);
		new_troop.add(troop_zipcode);
		troop_zipcode.setColumns(10);
		
		JLabel lblManager = new JLabel("Manager:");
		lblManager.setHorizontalAlignment(SwingConstants.RIGHT);
		lblManager.setBounds(33, 74, 61, 16);
		new_troop.add(lblManager);
		
		JComboBox troop_manager_combo = new JComboBox();
		troop_manager_combo.setBounds(104, 70, 318, 25);
		new_troop.add(troop_manager_combo);
		
		
	}
}
